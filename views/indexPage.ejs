<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1> <%= title %> </h1>

    <% messages.forEach((message) => { %>
      <%- include('components/message', {message: message}); %>
      <%- include('components/button', {ref: `message/${messages.indexOf(message)}`, target: "_blank", text: "Open Message"}); %>
    <% }); %>

    <%- include('components/button', {ref: "new", target: "_self", text: "Send a new message"}); %>
  </body>
</html>
